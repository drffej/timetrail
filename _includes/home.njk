---
layout: base.njk
---

{{ content | safe }}

<div class="w3-content w3-display-container">
{% for course in collections.courses %}
    <div class="w3-display-container mySlides">
        
      <div class="w3-container w3-center w3-theme w3-padding">
        <div class="w3-display-topmiddle w3-large w3-container w3-text-black w3-padding">{{ course.data.title }} course</div>
        <img src="/public/images/{{ course.data.image}}" alt="{{ course.data.title }} course" style="width:50%"> 
 
      </div>
      
        <div class="w3-container w3-medium w3-container w3-padding-16 w3-theme-d1">
            <p>{{ course.data.description }}</p>
            <a href="{{ course.page.url  }}" class="w3-btn w3-white w3-border w3-border-teal w3-text-teal w3-round-large">Course Information</a>
        </div>
    </div>
{% endfor %}
  <button class="w3-button w3-display-left w3-black" onclick="plusDivs(-1)">&#10094;</button>
    <button class="w3-button w3-display-right w3-black" onclick="plusDivs(1)">&#10095;</button> 
</div>
<script>
var slideIndex = 1;
showDivs(slideIndex);

function plusDivs(n) {
  showDivs(slideIndex += n);
}

function showDivs(n) {
  var i;
  var x = document.getElementsByClassName("mySlides");
  if (n > x.length) {slideIndex = 1}
  if (n < 1) {slideIndex = x.length}
  for (i = 0; i < x.length; i++) {
     x[i].style.display = "none";  
  }
  x[slideIndex-1].style.display = "block";  
}
</script>